<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["PageDescription"]">
    <title>@ViewData["Title"] - WoW Classic News</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/libs/bootstrap/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/main.css" type="text/css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/libs/bootstrap/css/bootstrap.min.css" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-area="" asp-controller="News" asp-action="Index">WoW Classic News</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a id="news-nav-link" class="nav-link" asp-area="" asp-controller="News" asp-action="Index">News</a>
                </li>
                <li class="nav-item">
                    <a id="talents-nav-link" class="nav-link" asp-area="" asp-controller="Talents" asp-action="Index">Talents</a>
                </li>
                <li class="nav-item">
                    <a id="about-nav-link" class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a>
                </li>
            </ul>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="footer bg-dark">
        <div class="container-fluid">
            <span class="text-muted small">&copy; 2017 - WoW Classic News</span>
            <span class="text-muted ml-1 small"> - </span>
            <span class="text-muted ml-1 small">A site dedicated to following the release of World of Warcraft Classic</span>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/libs/jquery/jquery.js"></script>
        <script src="~/libs/popper/popper.js"></script>
        <script src="~/libs/bootstrap/js/bootstrap.js"></script>
        <script src="~/libs/angular/angular.js"></script>
        <script src="~/libs/angular-animate/angular-animate.js"></script>
        <script src="~/libs/lodash/lodash.js"></script>
        <script src="~/libs/sprintf/sprintf.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/libs/jquery/jquery.min.js"></script>
        <script src="~/libs/popper/popper.min.js"></script>
        <script src="~/libs/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/libs/angular/angular.min.js"></script>
        <script src="~/libs/angular-animate/angular-animate.min.js"></script>
        <script src="~/libs/lodash/lodash.min.js"></script>
        <script src="~/libs/sprintf/sprintf.min.js"></script>
    </environment>

    <script type="text/javascript">
        var currentPage = '@ViewBag.CurrentPage';
        angular.element(sprintf("#%s-nav-link", currentPage.toLowerCase())).addClass('active');
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
