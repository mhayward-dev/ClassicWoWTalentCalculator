@model WoWClassicNews.ViewModels.NewsViewModel
@{
    ViewData["Title"] = "News";
    ViewData["PageDescription"] = "World of Warcraft Classic (Vanilla) News and Opinions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="news-page" class="container-fluid">
    <div class="row">
        <div class="col-md-1 hidden-sm"></div>

        <div id="main-news-container" class="col-lg-10 col-sm-12">
            <h1 class="news-title thin-text">News and Opinions</h1>
            <p class="news-lead thin-text">World of Warcraft Classic Release Date : <strong>TBC</strong></p>
            <hr />
            <div id="latest-news-carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        @*<img class="d-block w-100" src="..." alt="First slide">*@
                        <div class="example"></div>
                        <div class="carousel-caption d-none d-md-block">
                            <h3>Vanilla Reborn has launched!</h3>
                            <p>Welcome to Vanilla Reborn, a website dedicated to covering World of Warcraft Classic</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        @*<img class="d-block w-100" src="..." alt="Second slide">*@
                        <div class="example"></div>
                        <div class="carousel-caption d-none d-md-block">
                            <h3>What we know so far</h3>
                            <p>A complete list of all the information we know so far about World of Warcraft Classic</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        @*<img class="d-block w-100" src="..." alt="Third slide">*@
                        <div class="example"></div>
                        <div class="carousel-caption d-none d-md-block">
                            <h3>Remembering World of Warcraft (2006)</h3>
                            <p>My memories of the original game, and how things might change coming back</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#latest-news-carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#latest-news-carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div id="news-story-container">
                @foreach (var story in Model.Stories)
                {
                    @Html.Partial("_NewsStoryItem", story)
                }
            </div>

            @Html.Partial("_NewsPagination", Model)
        </div>

        <div class="col-md-1 hidden-sm"></div>
    </div>
</div>